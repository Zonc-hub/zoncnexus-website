---
import { CollectionEntry, getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import type { GetStaticPaths } from "astro";

export const getStaticPaths = (async () => {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}) satisfies GetStaticPaths;

type Props = {
  post: CollectionEntry<"blog">;
};

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
  <article>
    <div class="post-header">
      <h1>{post.data.title}</h1>
      <p class="meta">
        <time datetime={post.data.pubDate.toISOString()}>
          {
            post.data.pubDate.toLocaleDateString("en-US", {
              year: "numeric",
              month: "short",
              day: "numeric",
            })
          }
        </time>
        â€¢ By {post.data.author}
      </p>
    </div>
    <div class="prose">
      <Content />
    </div>
  </article>
</Layout>

<style>
  .post-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  .post-header h1 {
    font-size: var(--text-4xl);
  }
  .post-header .meta {
    color: var(--color-muted);
  }
  .meta time {
    margin-right: 0.5rem;
  }

  /* The magic happens in the .prose class */
  .prose {
    /* Set a base font size for the article content */
    font-size: var(--text-lg);
    font-family: var(--font-serif); /* Use serif for long-form reading */
  }

  /* Style all child elements within .prose */
  .prose :global(h2),
  .prose :global(h3) {
    font-family: var(--font-sans);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .prose :global(p) {
    margin-bottom: 1.5rem;
    line-height: 1.8; /* Slightly taller line height for serif font */
  }

  .prose :global(ul),
  .prose :global(ol) {
    padding-left: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
  }

  /* Code block styling */
  .prose :global(pre) {
    background-color: #1f2937;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1rem;
    overflow-x: auto; /* Allow horizontal scrolling for long code lines */
    font-family: "Courier New", monospace;
    font-size: var(--text-sm);
  }

  .prose :global(code) {
    font-family: "Courier New", monospace;
  }

  .prose :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: 1rem;
    margin-left: 0;
    font-style: italic;
    color: var(--color-muted);
  }
</style>
